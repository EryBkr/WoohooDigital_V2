@model MyFramework.Project.Entities.Concrete.Haber
@{
    ViewBag.Title = "HaberAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Haber Ekle</h2>
            
            <form action="/Admin/HaberAdd" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="exampleInputEmail1">Haber Başlığı</label>
                    @Html.TextBoxFor(model => model.Baslik, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Haber Detayı</label>
                    @Html.TextAreaFor(model => model.Detay, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Detay, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleFormControlFile1">Haber Resmi</label>
                    @Html.TextBox("file", "", new { type = "file", @class = "form-control-file", id = "myFile", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Resim, "", new { @class = "text-danger" })
                </div>
              
                <input hidden name="Resim" id="myFileName" />

                <div class="form-group">
                    <label for="exampleInputEmail1">Sıra No</label>
                    @Html.TextBoxFor(model => model.SiraNo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SiraNo, "", new { @class = "text-danger" })
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" name="Aktiflik" value="true" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Aktiflik Durumu</label>
                </div>
                <button type="submit" class="btn btn-primary">Ekle</button>
            </form>
        </div>
    </div>
</div>


